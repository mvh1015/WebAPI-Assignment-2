<% include header %>
	
<h2>Add new favorite thing.</h2>

<form method="post" role="form">
	<div class= "form-group">
		<label for="tite">Name of favorite thing</label>
		<input type="text" class="form-control" id="title" name = "title" placeholder = "Enter name of favorite thing here" required>
	</div>
	<div class = "form-group">
		<label for="content">Description of favorite thing.</label>
		<textarea class = "form-control" id="body" name="body" placeholder="Add description of favorite thing" rows="3" required></textarea>
	</div>
	<div class = "form-group">
		<input type = "submit" value = "Post Favorite Thing" class="btn btn-primary">
	</div>

</form>	

